@{
    ViewData["Title"] = "Register";
}
@model User


<!DOCTYPE html>
<html>
<head>
    <title>Register</title>
    <link rel="stylesheet" href="~/css/site.css">
</head>
<body>
    <h1>Register</h1>


    <form asp-controller="Authenticate" asp-action="Register" method="post">
        <table>
            <tr>
                <th>Email:</th>
                <td class="inputCell">
                    <input name="Email" id="emailInput" type="text" placeholder="Email@gmail.com" required />
                </td>
            </tr>
            <tr>
                <th>Password:</th>
                <td class="inputCell">
                    <input name="Password" id="passwordInput" type="password" placeholder="Password" required />
                </td>
            </tr>
            <tr>
                <th colspan="2" style="text-align: right;">
                    <input type="submit" id="RegisterButton" value="Register" />
                </th>
            </tr>
        </table>
    </form>

</body>
</html>